<div
        data-controller="countdown"
        data-countdown-seconds-value="{{ seconds|default(3) }}"
        data-countdown-go-text-value="{{ go_text|default('GO!') }}"
        data-countdown-auto-start-value="{{ auto_start is defined ? (auto_start ? 'true' : 'false') : 'false' }}"
        {% if game_sync_target is defined %}data-game-sync-target="{{ game_sync_target }}"{% endif %}
>
    <!-- Ton contenu home existant (visuel + QR code) -->

    <!-- Overlay BD -->
    <div class="countdownOverlay" data-countdown-target="overlay" hidden>
        <div class="countdownCard">
            <div class="countdownBurst" aria-hidden="true"></div>
            <div class="countdownNumber" data-countdown-target="number">3</div>
            <div class="countdownSub">Pr√©parez-vous !</div>
        </div>
    </div>
</div>
