{% extends 'admin_base.html.twig' %}

{% block title %}QR codes - {{ escape.name }}{% endblock %}

{% block body %}
    <div class="pilot-page">
        <h1>QR codes - {{ escape.name }}</h1>
        <p><strong>Équipe :</strong> {{ team_code }}</p>

        <div class="sjdb-actions">
            <a class="sjdb-pill" href="{{ path('admin_escape_qr_print', { id: escape.id, team: team_number }) }}" target="_blank" rel="noopener">Imprimer</a>
            <a class="sjdb-pill" href="{{ path('admin_escape_edit', { id: escape.id }) }}">Retour à l'édition</a>
        </div>

        <div class="qr-grid">
            {% for item in qr_items %}
                <div class="qr-card">
                    <h2>{{ team_code }}</h2>
                    <span class="qr-label">QR {{ item.index }}</span>
                    {% if item.image %}
                        <img src="{{ item.image }}" alt="QR {{ item.index }}">
                        <p class="qr-code">{{ item.code }}</p>
                    {% else %}
                        <div class="qr-missing">QR non configuré</div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}