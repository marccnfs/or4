{% extends 'public.html.twig' %}


{% block title %}Pilotage du jeu{% endblock %}

{% block body %}
    <div class="sjdb-home"
         data-controller="pilot-teams-sync"
         data-pilot-teams-sync-url-value="{{ path('game_pilot_teams') }}"
         data-pilot-teams-sync-mercure-url-value="{{ mercure_public_url }}"
         data-pilot-teams-sync-topic-value="{{ escape_game ? '/escape/' ~ escape_game.id ~ '/scoreboard' : '' }}">
        <div class="sjdb-bg"></div>

        <main class="sjdb-card sjdb-card--wide" role="main" aria-label="Accueil sjdb.space">
            <header class="sjdb-header">
                <img
                        class="sjdb-logo"
                        src="{{ asset('images/logo_sjdb_lite.png') }}"
                        alt="Logo sjdb.space"
                        width="160"
                        height="160"
                        loading="eager"
                />

                <div class="sjdb-brand"></div>
            </header>

            <section class="sjdb-content">
                <h1 class="sjdb-title">Pilotage du jeu</h1>
                <div class="pilot-header">

                    {% if escape_game %}
                        <div class="pilot-summary">
                            <div><strong>Escape :</strong> {{ escape_game.name }}</div>
                            <div><strong>Statut :</strong> {{ escape_game.status }}</div>
                        </div>
                    {% endif %}
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {% if not escape_game %}
                    <p>Aucun escape enregistré.</p>
                    {#  {% else %}  <p><strong>Page join :</strong> {{ join_url }}</p> #}
                {% endif %}

                <div class="pilot-layout">
            <div class="pilot-teams">
                <header>
                    <div>
                        <h2>Équipes inscrites</h2>
                        <p class="hint">Mise à jour toutes les 3 secondes.</p>
                    </div>
                    <div class="pilot-teams__count" data-pilot-teams-sync-target="count">{{ escape_game ? escape_game.teams|length : 0 }}</div>
                </header>
                <ul class="team-list" data-pilot-teams-sync-target="list">
                    {% if escape_game and escape_game.teams|length > 0 %}
                        {% for team in escape_game.teams %}
                            {% set qr_total = team.teamQrSequences|length %}
                            {% set qr_scanned = team.teamQrSequences|filter(sequence => sequence.validated)|length %}
                            <li>
                                <span>{{ team.name }}</span>
                                <span class="team-list__code">{{ team.registrationCode }}</span>
                                <span class="team-list__state">{{ team.state }}</span>
                                <span class="team-list__qr">QR {{ qr_scanned }}/{{ qr_total }}</span>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class="pilot-teams__empty">Aucune équipe inscrite pour le moment.</li>
                    {% endif %}
                </ul>
                <p class="hint" data-pilot-teams-sync-target="updated"></p>
            </div>

            <div class="pilot-actions">
                <form method="post" action="{{ path('game_pilot_start') }}">
                    <input type="hidden" name="escape_id" value="{{ escape_game ? escape_game.id : '' }}">
                    <input type="hidden" name="_token" value="{{ escape_game ? csrf_token('game_pilot_' ~ escape_game.id) : '' }}">
                    <button type="submit">Lancer le jeu</button>
                </form>

                <form method="post" action="{{ path('game_pilot_stop') }}">
                    <input type="hidden" name="escape_id" value="{{ escape_game ? escape_game.id : '' }}">
                    <input type="hidden" name="_token" value="{{ escape_game ? csrf_token('game_pilot_' ~ escape_game.id) : '' }}">
                    <button type="submit">Mettre en attente</button>
                </form>

                <form method="post" action="{{ path('game_pilot_offline') }}">
                    <input type="hidden" name="escape_id" value="{{ escape_game ? escape_game.id : '' }}">
                    <input type="hidden" name="_token" value="{{ escape_game ? csrf_token('game_pilot_' ~ escape_game.id) : '' }}">
                    <button type="submit">Mettre hors ligne</button>
                </form>

                {% set has_teams = escape_game and escape_game.teams|length > 0 %}
                <form method="post"
                      action="{{ path('game_pilot_finish') }}"
                      data-controller="pilot-finish"
                      data-pilot-finish-target="form">
                    <input type="hidden" name="escape_id" value="{{ escape_game ? escape_game.id : '' }}">
                    <input type="hidden" name="_token" value="{{ escape_game ? csrf_token('game_pilot_' ~ escape_game.id) : '' }}">
                    <input type="hidden" name="winner_team_id" data-pilot-finish-target="winnerInput">
                    <button type="button" data-action="pilot-finish#open">Fin de partie</button>

                    <dialog class="pilot-finish-dialog" data-pilot-finish-target="dialog" aria-labelledby="pilot-finish-title">
                        <div class="pilot-finish-dialog__content">
                            <h2 id="pilot-finish-title">Sélectionner l'équipe gagnante</h2>
                            <p class="hint">La sélection sera affichée sur l'écran final.</p>

                            <label class="pilot-finish-dialog__label">
                                Équipe gagnante
                                <select data-pilot-finish-target="select" {{ has_teams ? 'required' : 'disabled' }}>
                                    <option value="" disabled selected>Choisir une équipe</option>
                                    {% if escape_game %}
                                        {% for team in escape_game.teams %}
                                            <option value="{{ team.id }}">{{ team.name }} ({{ team.registrationCode }})</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </label>

                            <div class="pilot-finish-dialog__actions">
                                <button type="button" data-action="pilot-finish#confirm" {{ has_teams ? '' : 'disabled' }}>
                                    Valider la fin de partie
                                </button>
                                <button type="button" data-action="pilot-finish#close">Annuler</button>
                            </div>
                        </div>
                    </dialog>
                </form>


                <form method="post" action="{{ path('game_pilot_reset') }}" onsubmit="return confirm('Supprimer toutes les équipes inscrites ?');">
                    <input type="hidden" name="escape_id" value="{{ escape_game ? escape_game.id : '' }}">
                    <input type="hidden" name="_token" value="{{ escape_game ? csrf_token('game_pilot_' ~ escape_game.id) : '' }}">
                    <button type="submit">Réinitialiser les équipes</button>
                </form>

                <a style="width: auto" href="{{ home_url }}" target="_blank" rel="noopener">page d'accueil</a>
            </div>

        </div>
            </section>
        </main>
    </div>
{% endblock %}