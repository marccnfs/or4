{% extends 'game/base.html.twig' %}

{% block title %}Victoire{% endblock %}

{% block body %}
    <header>
        <div>
            <h1>Bravo {{ team_code }} !</h1>
            <p class="hint">Vous avez trouvé le secret.</p>
        </div>
        <span class="badge"> {{ message_winner }}</span>
    </header>

    <div class="card stack">
        <div class="status">Victoire</div>
        <h2>L'équipe {{ winner_name }} remporte la partie !</h2>
        <p class="hint">Merci d'avoir participé. Prévenez l'animateur pour la suite.</p>
        <a class="btn btn-outline" href="{{ path('game_join') }}">Rejouer</a>
    </div>
{% endblock %}